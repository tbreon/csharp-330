@model LearningWebsite.Models.Register

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border-bottom header">
    <h1>@ViewData["Title"]</h1>
    <p>@ViewBag.Message</p>
</div>

<div class="register">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
            <p>Email: @Html.TextBoxFor(t => t.Email) @Html.ValidationMessageFor(t => t.Email)</p>
            <p>Password: @Html.TextBoxFor(t => t.Password) @Html.ValidationMessageFor(t => t.Password)</p>
            <p>Confirm Password: @Html.TextBoxFor(t => t.ConfirmPassword) @Html.ValidationMessageFor(t => t.ConfirmPassword)</p>
            <input type="submit" value="Register" />
            }
        </div>
